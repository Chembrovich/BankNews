<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/news_list_item_margin"
    android:layout_marginRight="@dimen/news_list_item_margin"
    android:orientation="horizontal">

    <View
        android:id="@+id/circle"
        android:layout_gravity="center"
        android:layout_width="@dimen/circle_view_width"
        android:layout_height="@dimen/circle_view_height"
        android:layout_margin="@dimen/circle_view_margin"
        android:background="@drawable/news_circle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginEnd="@dimen/text_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/news_list_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/secondary_text_size"
                android:textColor="@color/news_date_color"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/promo_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:visibility="invisible"
                android:textColor="@color/colorPrimary"
                android:text="@string/promo"
                android:textSize="@dimen/secondary_text_size"/>
        </LinearLayout>

        <TextView
            android:id="@+id/news_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/news_list_title_color"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>

</LinearLayout>
